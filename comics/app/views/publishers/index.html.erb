<p id="notice"><%= notice %></p>

<%= link_to "current_user_show", current_user %>

<h1>Comic Sense</h1>

<h2>Releasing This Week: <small>(12/9/15)</small></h2>

<% @publishers.each do |pub| %>
  <h3><u><%= pub.name %></u></h3>
    <div class="row">
    <% if pub.name == "DC" %>
      <% pub.books.each do |dc| %>
        <div class="large-4 columns">
          <div class="panel">
            <%= link_to image_tag(root_url + "/images/" + dc.cover, size: "120x200"), dc %>
            <div class="container">
              <%= dc.title %>
             </div>
          </div>
        </div>
      <%end %>
      </div>
    <% elsif pub.name == "Marvel" %>
      <% pub.books.each do |marv| %>
        <div class="large-4 columns">
          <div class="panel">
            <%= link_to image_tag(root_url + "/images/" + marv.cover, size: "120x200"), marv %>
            <div class="container">
              <%= marv.title %>
             </div>
          </div>
        </div>
      <%end %>
      </div>
    <% elsif pub.name == "Image" %>
      <% pub.books.each do |img| %>
        <div class="large-4 columns">
          <div class="panel">
            <%= link_to image_tag(root_url + "/images/" + img.cover, size: "120x200"), img %>
            <div class="container">
              <%= img.title %>
             </div>
          </div>
        </div>
      <%end %>
      </div>
    <% end %>

<% end %> 

