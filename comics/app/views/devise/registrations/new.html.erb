<div class="small-8 large-offset-2"> 
  <h2>Register</h2> 
  <h4 class="subheader">Fill out the form below to sign up.</h4> 
  <hr> 

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %> 
    <%= devise_error_messages! %> 

    <div class="row"> 
      <div class="small-3 columns"> 
        <%= f.label :name, :class => 'right inline' %> 
      </div> <!-- class="small-3 columns" -->
      <div class="small-9 columns"> 
        <%= f.text_field :name %> 
      </div> <!-- class="small-9 columns" -->
    </div> <!-- class="row" -->

    <div class="row"> 
      <div class="small-3 columns"> 
        <%= f.label :username, :class => 'right inline' %> 
      </div> <!-- class="small-3 columns" -->
      <div class="small-9 columns"> 
        <%= f.text_field :username %> 
      </div> <!-- class="small-9 columns" -->
    </div> <!-- class="row" -->

    <div class="row"> 
      <div class="small-3 columns"> 
        <%= f.label :email, :class => 'right inline' %> 
      </div> <!-- class="small-3 columns" -->
      <div class="small-9 columns"> 
        <%= f.email_field :email %> 
      </div> <!-- class="small-9 columns" -->
    </div> <!-- class="row" -->

    <div class="row"> 
      <div class="small-3 columns"> 
        <%= f.label :password, :class => 'right inline' %> 
      </div> <!-- class="small-3 columns" -->
      <div class="small-9 columns"> 
        <%= f.password_field :password %> 
      </div> <!-- class="small-9 columns" -->
    </div> <!-- class="row" -->
    
    <div class="row"> 
      <div class="small-3 columns"> 
        <%= f.label :password_confirmation, :class => 'right inline' %> 
      </div> <!-- class="small-3 columns" -->
      <div class="small-9 columns"> 
         <%= f.password_field :password_confirmation %> 
      </div> <!-- class="small-9 columns" -->
    </div> <!-- class="row" -->

    <div class="small-9 columns small-offset-3"> 
      <%= f.submit "Sign up", :class => 'button' %> 
    </div> <!-- class="small-9 columns small-offest-3"-->
   
    <div class="small-9 columns small-offset-3"> 
      <%= render "devise/shared/links" %> 
    </div> <!-- class="small-9 columns small-offest-3"-->
   <% end %> <!-- form_for -->
</div> <!-- class="small-8 large-offset-2" -->
